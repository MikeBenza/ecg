#!/usr/bin/env bash

pushd $(dirname $0)/../_build/default/bin >/dev/null
ECG_ESCRIPT=$PWD/ecg
popd >/dev/null
if [ ! -f "$ECG_ESCRIPT" ]; then
    echo "$0: $ECG_ESCRIPT not found. Did you forget to \`rebar3 escriptize\`?"
    exit 1
fi

OUT=$1

$ECG_ESCRIPT $@ | sed -n '/digraph/,$ p' | tee $OUT.dot | dot -Tpng > $OUT.png

